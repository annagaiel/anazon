<h1>Edit</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
 <div class='form-group'>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div class='form-group'>
    <%= label_tag :price %>
    <%= number_field_tag :price, @product.price %>
  </div>
  <div class='form-group'>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image  %>
  </div>
  <div class='form-group'>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
  <%= submit_tag 'Update Product', class: 'btn btn-default' %>

<% end %>
