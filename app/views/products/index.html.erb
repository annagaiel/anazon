<h1>Welcome to Anazon</h1>

<table class="table">
  <th>Name</th>
  <th>Price</th>
  <th>Image</th>
  <th>Desciption</th>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, "/products/#{product.id}" %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= image_tag product.image, alt: 'Alt Image Text', class: 'img-responsive' %></td>
      <td><%= product.description %></td>
    </tr>
    <% end %>
</table>
