<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Edit</h1>
      <%= form_tag "/products/#{@product.id}", method: :patch do %>
       <div class='form-group'>
          <%= label_tag :name, nil, :class => "control-label" %>
          <%= text_field_tag :name, @product.name, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :price, nil, :class => "control-label" %>
          <%= number_field_tag :price, @product.price, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :image, nil, :class => "control-label" %>
          <%= text_field_tag :image, @product.image, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :description, nil, :class => "control-label" %>
          <%= text_field_tag :description, @product.description, :class => "form-control"  %>
        </div>
        <%= submit_tag 'Update Product', class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
