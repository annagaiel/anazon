<h1><%= @product.name %> - <span class=<%= @product.color_price %>><%= @product.sale_message %></span></h1>

<div class="row">
  <div class="col-md-12">
    <%= @product.description %> -
    <% if @product.available %>
      <span> in stock</span>
    <% else %>
      <span> out of stock </span>
    <% end %>
  </div>
</div>

<% @product.images.each do |image| %>
<div class="col-xs-3">
  <a href="#" class="thumbnail">
    <img src="<%= image.url %>" class = 'img-responsive' width="100" column="100" />
  </a>
</div>

<% end %>

<table class="table table-condensed">
  <tr>
    <th>
      Supplier
    </th>
    <td>
      <%= @product.supplier.name%>
    </td>
  </tr>
  <tr>
    <th>
      Price
    </th>
    <td class=<%= @product.color_price%>>
      <%= number_to_currency @product.price %>
    </td>
  </tr>
  <tr>
    <th>
      Tax:
    </th>
    <td>
      <%= number_to_currency @product.tax %>
    </td>
  </tr>
  <tr>
    <th>
      Total:
    </th>
    <td>
      <%= number_to_currency @product.total %>
    </td>
  </tr>
</table>

<a href="/products/<%= @product.id %>/edit" class="btn btn-success">Edit</a>
<%= link_to "Delete", "/products/#{@product.id}", method: :delete, class: 'btn btn-danger' %>
