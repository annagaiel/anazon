<h1>Your Cart</h1>

<table class="table table-hover">
  <tr>
    <th>Product Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Subtotal</th>
    <th>Tax</th>
    <th>Total</th>
  </tr>
  <% @carted_products.each do |item| %>
  <tr>
    <td><%= item.product.name %></td>
    <td><%= item.quantity %></td>
    <td><%= number_to_currency ( item.order.subtotal / item.quantity ) %></td>
    <td><%= number_to_currency item.order.subtotal %></td>
    <td><%= number_to_currency item.order.tax %></td>
    <td><%= number_to_currency item.order.total %></td>
  </tr>
  <% end %>
</table>

<%= form_tag '/order', :class => 'form-inline', method: :post do %>
  <%= submit_tag 'Buy Now', class: 'btn btn-success' %>
<% end %>
