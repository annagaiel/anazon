<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>New Product</h1>
      <%= form_tag '/products', method: :post do %>
        <div class='form-group'>
          <%= label_tag :name, nil, :class => "control-label" %>
          <%= text_field_tag :name, nil, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :price, nil, :class => "control-label" %>
          <%= number_field_tag :price, nil, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :image, nil, :class => "control-label" %>
          <%= text_field_tag :image, nil, :class => "form-control"  %>
        </div>
        <div class='form-group'>
          <%= label_tag :description, nil, :class => "control-label" %>
          <%= text_field_tag :description, nil, :class => "form-control"  %>
        </div>
        <%= submit_tag 'Add Product', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
